    <dep.google.code.findbugs.version>2.0.2</dep.google.code.findbugs.version>
    <dep.guava.version>14.0.1</dep.guava.version>
    <dep.hadoop.version>0.20.0</dep.hadoop.version>
    <dep.hive.version>0.11.0</dep.hive.version>
    <dep.jackson.version>2.12.0</dep.jackson.version>
    <dep.metrics.version>2.2.0</dep.metrics.version>

    <dep.plugin.gpg.version>1.4</dep.plugin.gpg.version>
    <dep.plugin.jar.version>2.4</dep.plugin.jar.version>
    <dep.plugin.javadoc.version>2.9</dep.plugin.javadoc.version>
    <dep.plugin.findbugs.version>2.5.1</dep.plugin.findbugs.version>
    <dev.plugin.mavanagaiata.version>0.5.0</dev.plugin.mavanagaiata.version>
    <dep.plugin.rat.version>0.9</dep.plugin.rat.version>
    <dep.plugin.release.version>2.4.1</dep.plugin.release.version>
